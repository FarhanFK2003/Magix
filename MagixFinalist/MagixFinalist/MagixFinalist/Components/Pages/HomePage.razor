@page "/Home"
@rendermode InteractiveServer
@inject NavigationManager navigationManager

<section class="vh-100 bg-image"
         style="background-image: url('/images/bg.jpg'); background-size: cover; background-position: center;">
    <div class="container">
        <div class="row justify-content-end">
            <div class="col-md-1 col-2 py-4">

            </div>
        </div>
    </div>
    <div class="container mt-3 mt-md-4 mt-lg-4">
        <div class="row align-items-end" style="min-height: 200px;">
            <div class="col-12">
                <p class="fs-md-1 fs-sm-2 fs-1 text-center text-white fw-bold" style="text-shadow: 8px 8px 10px rgb(0,0,0);">
                    WELCOME TO <br>
                    <img src="/images/magix.png" alt="" class="img-fluid" style="margin-left: -0.5%;">
                </p>
            </div>
        </div>
    </div>

    <div class="container mt-3 mt-md-4 mt-lg-5">
        <div class="row">
            <div class="col-12">
                <button class="btn btn-success fs-md-2 fs-sm-5 fs-2 bt-block px-3" style="border-radius: 100px; background-color: #1A0833;" @onclick="ClickSignup">SIGN UP</button>
            </div>
        </div>
        <div class="row mt-3 mt-md-4 mt-lg-5">
            <div class="col-12">
                <button class="btn btn-success fs-md-2 fs-sm-5 fs-2 px-4" style="border-radius: 100px; background-color: #1A0833;" @onclick="ClickLogin">LOG IN</button>
            </div>
        </div>
    </div>

</section>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>


@code {

    public void ClickSignup()
    {
        navigationManager.NavigateTo("/Signup");
    }

    public void ClickLogin()
    {
        navigationManager.NavigateTo("/Login");
    }

}
